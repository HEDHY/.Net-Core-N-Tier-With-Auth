<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Diana - Biblioteca - WebApp</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Tempusdominus Bootstrap 4 -->
    <link rel="stylesheet" href="~/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="~/plugins/daterangepicker/daterangepicker.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/css/adminlte.css">

    @RenderSection("Styles", false)

</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                @*<li class="nav-item">
                    <a class="nav-link white_letters" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>*@
                <li class="nav-item d-none d-sm-inline-block">
                    <a onclick="location.href='@(Url.Action("Index", "Dashboard"))'" class="nav-link white_letters">Dashboard</a>
                </li>

            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link white_letters" data-toggle="dropdown" href="#">
                        <i class="fas fa-globe-europe"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <a onclick=GetLanguage('Dashboard','Index','pt-PT') class="dropdown-item">
                            <i class="fas fa-globe-europe mr-2"></i> Português
                        </a>
                        <div class="dropdown-divider"></div>
                        <a onclick=GetLanguage('Dashboard','Index','en-US') class="dropdown-item">
                            <i class="fas fa-globe-europe mr-2"></i> Inglês
                        </a>
                        <div class="dropdown-divider"></div>
                        <a onclick=GetLanguage('Dashboard','Index','es-ES') class="dropdown-item">
                            <i class="fas fa-globe-europe mr-2"></i> Espanhol
                        </a>
                        <div class="dropdown-divider"></div>
                    </div>
                </li>
            </ul>

        </nav>
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a class="brand-link">
                <img src="~/img/istec_logo.png" alt="ISTEC Logo" class="brand-image" style="opacity: .8">
                <span class="brand-text font-weight-light">Biblioteca</span>
            </a>
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                        <li class="nav-header">MENU</li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-book"></i>
                                <p>
                                    Livros
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview" style="margin-left: 29px;">
                                <li class="nav-item">
                                    <a asp-controller="Book" asp-action="Add" class="nav-link">
                                        <i class="fas fa-plus"></i>
                                        <p>Adicionar</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Book" asp-action="List" class="nav-link">
                                        <i class="fas fa-list"></i>
                                        <p>Listar</p>
                                    </a>
                                </li>
                            </ul>

                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-user"></i>
                                <p>
                                    Clientes
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview" style="margin-left: 29px;">
                                <li class="nav-item">
                                    <a asp-controller="User" asp-action="Add" class="nav-link">
                                        <i class="fas fa-plus"></i>
                                        <p>Adicionar</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="User" asp-action="List" class="nav-link">
                                        <i class="fas fa-list"></i>
                                        <p>Listar</p>
                                    </a>
                                </li>
                            </ul>

                        </li>

                        <li class="nav-item">

                            <a asp-controller="Checkout" asp-action="CheckoutListUser" class="nav-link">
                                <i class="nav-icon fas fa-cash-register"></i>
                                <p>
                                    Checkouts
                                </p>
                            </a>
                        </li>

                    </ul>
                </nav>
            </div>
        </aside>

        <div class="content-wrapper" style="min-height: 859px !important;">
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div><!-- /.container-fluid -->
            </section>
        </div>
       
        <footer class="border-top footer text-muted">
            <div class="container" style="margin-left:400px">
                &copy; 2020 - Diana Rodrigues - Biblioteca.WebApp
            </div>
        </footer>
    </div>
 
    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="~/plugins/jquery-ui/jquery-ui.min.js"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <!-- Bootstrap 4 -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- daterangepicker -->
    <script src="~/plugins/moment/moment.min.js"></script>
    <script src="~/plugins/daterangepicker/daterangepicker.js"></script>
    <!-- overlayScrollbars -->
    <script src="~/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/js/adminlte.js"></script>
    

    <!-- LANGUAGE -->
    <script src="~/js/addedJS/language.js"></script>
    <!-- SWEET ALERT -->
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
